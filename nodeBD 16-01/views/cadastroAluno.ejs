<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Alunos</title>
</head>
<body>
    <!-- const {matricula, nome, email, data_nascimento, turma, fone, sexo} = req.body  -->
    <form method="post" action="/alunos/novoAluno">
        <label for="nome">Nome Completo:</label>
        <input type="text" name="nome" id="nome"><br>
        <label for="matricula">Matricula:</label>
        <input type="text" name="matricula" id="matricula"><br>
        <label for="email">E-mail:</label>
        <input type="email" name="email" id="email"><br>
        <label for="data_nascimento">Data de Nascimento:</label>
        <input type="date" name="data_nascimento" id="data_nascimento"><br>
        <label for="turma">Turma:</label>
        <input type="text" name="turma" id="turma"><br>
        <label for="fone">Telefone:</label>
        <input type="tel" name="fone" id="fone"><br>
        <label for="sexo">Sexo:</label> <br>
        <label for="sexo">M</label>
        <input type="radio" name="sexo" value="M" id="sexo"><br>
        <label for="sexo">F</label>
        <input type="radio" name="sexo" value="M" id="sexo"><br>
        <label for="sexo">O</label>
        <input type="radio" name="sexo" value="M" id="sexo"><br>
        <input type="submit" name="Cadastrar" id="cadastrar">
    </form>
    
</body>
</html>